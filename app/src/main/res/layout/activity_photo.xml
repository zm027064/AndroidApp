<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/photo_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#333333">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="64dp"
            android:singleLine="true"
            android:text="@string/back"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <TextView
            android:id="@+id/photo_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photo"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <Button
            android:id="@+id/slideshow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slideshow"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Main Photo View -->
    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo_header"
        android:layout_above="@id/tags_container"
        android:scaleType="fitCenter" />

    <!-- Tags Container -->
    <LinearLayout
        android:id="@+id/tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/slideshow_controls"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#33333388">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tags_label"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/no_tags_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_tags"
            android:textColor="#CCCCCC"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Slideshow Controls -->
    <LinearLayout
        android:id="@+id/slideshow_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#333333">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:minWidth="56dp"
            android:layout_gravity="center_vertical"
            android:text="\u25C0"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginEnd="6dp"
            android:gravity="center" />

        <Button
            android:id="@+id/add_tag_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/add_tag"
            android:textSize="12sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end" />

        <Button
            android:id="@+id/rename_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/rename"
            android:textSize="11sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end" />

        <Button
            android:id="@+id/delete_tag_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/delete_tag"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:minWidth="56dp"
            android:layout_gravity="center_vertical"
            android:text="\u25B6"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_marginStart="6dp"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
